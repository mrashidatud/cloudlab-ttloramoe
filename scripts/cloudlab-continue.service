[Unit]
Description=Continue CloudLab TTLoRA-MoE setup after NVIDIA driver install
After=multi-user.target
ConditionPathExists=/opt/cloudlab-setup/STAGE1_DONE
ConditionPathExists=!/opt/cloudlab-setup/COMPLETE

[Service]
Type=oneshot
ExecStart=/bin/bash -lc '/local/repository/scripts/setup-stage2-env-and-artifact.sh'
RemainAfterExit=no
TimeoutSec=0

[Install]
WantedBy=multi-user.target

